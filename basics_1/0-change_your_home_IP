#!/usr/bin/env bash
# Script to configure localhost and facebook.com IPs

# Check if running as root
if [ "$EUID" -ne 0 ]; then
  echo "Please run as root"
  exit 1
fi

# Remove previous localhost and facebook.com entries
sudo grep -vE "^(127\.0\.0\.2.*localhost|8\.8\.8\.8.*facebook\.com)" /etc/hosts | sudo tee /etc/hosts.tmp > /dev/null

# Add new entries
echo "127.0.0.2 localhost" | sudo tee -a /etc/hosts.tmp > /dev/null
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts.tmp > /dev/null

# Replace /etc/hosts with the temp file
sudo tee /etc/hosts < /etc/hosts.tmp > /dev/null
sudo rm /etc/hosts.tmp

